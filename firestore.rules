rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection - for legacy app state persistence
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Projects collection
    match /projects/{projectId} {
      // Allow users to read their own projects
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Allow users to create projects with their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Allow users to update/delete their own projects
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Candidates collection
    match /candidates/{candidateId} {
      // Allow authenticated users to read/write candidates
      // (simplified from the complex get() calls which can be slow)
      allow read, write: if isAuthenticated();
    }

    // Token Usage collection (for Finance Dashboard)
    match /token_usage/{docId} {
      // Allow authenticated users to read and write token usage records
      allow read, write: if isAuthenticated();
    }
  }
}
